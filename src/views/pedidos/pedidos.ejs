<% include ../partials/header %> 

<h1>Página de Pedidos</h1>

<% pedidos.forEach((pedido) => { %>    
    <table id="cart" class="table table-hover table-condensed">
        <thead>
            <tr>           
                <th style="width:20%">Endereço</th>
                <th style="width:8%">Comprador</th>
                <th style="width:22%" class="text-center">Valor da Compra</th>
                <th style="width:40%">Produtos</th> 
                <th style="width:10%"></th>
            </tr>
        </thead>
        <tbody>
            
            <td><%= pedido.endereco %></td>
            <td class="text-center"><%= pedido.name %></td>
            <td class="text-center"><%= pedido.precoTotal %>.00R$</td>
            
            <% pedido.items.forEach((item) => { %>
                
                <td class="cervejas"> <%= item.quantidade %> <%= item.item.titulo %></td>
                
            <% }) %>

            <td class="actions" data-th="">
                <a href="/pedidos-deletar/<%= pedido._id %>"  type="button" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span> Remover</a>								
            </td>
            <br>
                
<% }) %>
        </tbody>
    </table>
        
<% include ../partials/footer %> 